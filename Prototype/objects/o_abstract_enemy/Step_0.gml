switch (current_state) {
	
	case states.idle:
		NPC_step_movement();
		break;
	
	case states.attack:
		NPC_step_attack();
		break;
	
	case states.dodge:
		NPC_step_dodge();
		break;
		
	case states.pain:
		NPC_step_pain();
		break;
	
	case states.recover:
		NPC_step_recover();
		break;
}